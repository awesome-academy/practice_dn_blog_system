<% provide :title, !@user.nil? ? @user.name : t(".not_exits") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user %>
      <h1>
        <%= @user.name %>
      </h1>
      <div>
        <%= image_tag("anh6.jpg", alt: "avatar", class: "img-avatar") %> 
      </div>
      <h1>
        <%= @user.email %>
      </h1>

      <% end %>
    </section>
  </aside>
</div>