<% provide :title, !@user.nil? ? @user.name : t(".not_exits") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user %>
      <h1>
        <%= @user.name %>
      </h1>
      <div>
        <%= image_tag("anh6.jpg", alt: "avatar", class: "img-avatar") %> 
      </div>
      <h1>
        <%= @user.email %>
      </h1>

      <% end %>
    </section>
    <section>
      <% @user.blogs.each do |blog| %>
        <div class="box">
          <div class="cover_photo_blog_index">
            <%= image_tag blog.cover_photo.to_s, class: "img_thumbnail" %>
          </div>
          <div class="post-article">
            <span><%= link_to blog.title, blog, class: "title_blog crop_text_2" %> </span>
          </div>
        </div>
      <% end %>
    </section>
  </aside>
</div>